---
import '../../styles/RiU.scss';

import BaseHead from "../../components/BaseHead.astro";
import ClubList from '../../components/RiU/ClubList.svelte';
import HyperButton from '../../components/RiU/HyperButton.astro';
import RiUFooter from "../../components/RiU/RiUFooter.svelte";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";

const posts = (await getCollection("RiU"));
---

<!doctype html>
<html
  lang="en"
  data-is-scrolling-up="true|false"
  data-is-bottom="true|false"
  data-is-top="true|false"
  data-has-scroll="true|false"
>
  <head>
    <BaseHead
      title={SITE_TITLE}
      description={SITE_DESCRIPTION}
    />

    <style>
      .pc {
          display: block;
      }
      .mobile {
          display: none;
      }

      main,
      section {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
      }
      main {
        height: 100vh;
        background-image: url('/RiU/background_web.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }
      section {
        width: 100%;
        height: 100%;
        overflow-x: hidden;
      }
      section * {
        word-break: break-all;
        overflow-wrap: break-word;
      }

      .container {
        display: flex;
        justify-content: space-between;
        flex-direction: column;
        align-items: center;
        width: 90%;
        height: 100%;
        max-width: 1000px;
      }
      .title-img {
        max-width: 75%;
        height: auto;
        margin-top: 40px;
      }
      .list {
        width: 100%;
        aspect-ratio: 1072 / 714;
        background-image: url('/RiU/paper_web.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 6%;
      }
      .list-title {
        color: var(--color-riu-black);
        margin-bottom: 2rem;
        text-align: center;
      }

      @media (max-width: 950px) {
        .list {
          padding: 4%;
        }
        .list-title {
          margin-bottom: 1rem;
        }
      }
      @media (max-width: 870px) {
        .list {
          padding: 2%;
        }
      }

      /* mobile */
      @media (max-width: 750px) {
        .pc {
          display: none;
        }
        .mobile {
          display: block;
        }

        main {
          background-image: url('/RiU/background_mobile.png');
        }

        .list {
          width: 420px;
          padding: 8% 6%;
          aspect-ratio: 341 / 511;
          background-image: url('/RiU/paper_mobile.png');
        }
        .list-title {
            margin: 1rem;
        }
      }      

      @media (max-width: 460px) {
        .list {
          width: 100%;
        }
        .list-title {
          margin: 1rem 0 2rem 0;
        }
      }
      @media (max-width: 400px) {
        .list-title {
          margin: 0.6rem;
        }
      }
</style>

  </head>
  <body>
    <main>
      <section>
        <div class="container">
          <img src="/RiU/title.png" alt="Radicals in University" class="title-img">
          <div class="list">
            <div class="list-title text-style-title pc">
              동아리 이름을 클릭하여 연도별 활동 기록을 볼 수 있습니다.
            </div>
            <div class="list-title text-style-title mobile">
              동아리 목록
            </div>
            <ClubList client:load />
            <HyperButton imgSrc='button_intro.png' href="about" cling={true} />
          </div>
          <RiUFooter />
        </div>
      </section>
    </main>
  </body>
</html>
