---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";

import "../styles/RiU.scss";
import HyperButton from "../components/RiU/HyperButton.astro";
import RiUFooter from "../components/RiU/RiUFooter.svelte";
import ClubInfo from "../components/RiU/ClubInfo.svelte";
type Props = CollectionEntry<'RiU'>['data'];
const { university, officialName, shortenedName } = Astro.props;

---

<!doctype html>
<html
  lang="en"
  data-is-scrolling-up="true|false"
  data-is-bottom="true|false"
  data-is-top="true|false"
  data-has-scroll="true|false"
>
  <head>
    <BaseHead
      title={`${university} ${officialName}`}
      description={`Radicals in University: ${university} ${officialName}`}
    />

    <style>
      .pc {
        display: block;
      }
      .mobile {
        display: none;
      }

      main,
      section {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
      }
      main {
        height: 100vh;
        background-image: url('/RiU/background_web.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }
      section {
        width: 100%;
        height: 100%;
        overflow-y: hidden;
      }
      section * {
        word-break: break-all;
        overflow-wrap: break-word;
      }

      .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 90%;
        height: 100%;
        max-width: 1000px;
      }

      .paper {
        height: 100%;
        aspect-ratio: 1920 / 1080;
        background-image: url('/RiU/paper_big_web.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
      }
      .club-logo {
        position: absolute;
        left: 1rem;
        top: 26.4%; /* 15rem */
        width: auto;
        height: 16.4%; /* 150px */
        aspect-ratio: 1 / 1;
        border-radius: 100%;
        display: flex;
        overflow: hidden;
      }
      .club-logo img {
        width: 100%;
        height: 100%;
        text-align: center;
        background-color: var(--color-riu-black);
        object-fit: cover;
      }
      
      /* mobile */
      @media (max-width: 750px) {
        .pc {
          display: none;
        }
        .mobile {
          display: block;
        }

        main {
          background-image: url('/RiU/background_mobile.png');
        }

        .title-img {
          max-width: 75%;
          height: auto;
          margin-top: 40px;
        }

        .paper {
          width: 420px;
          height: auto;
          padding: 8% 6%;
          margin: 1rem 0;
          aspect-ratio: 341 / 511;
          background-image: url('/RiU/paper_mobile.png');
          display: flex;
          flex-direction: column;
        }
        .club-logo {
          display: none;
        }
      }

      @media (max-width: 460px) {
        .paper {
          width: 100%;
          height: auto;
        }
      }
    </style>

  </head>

  <body>
    <main>
      <section>
        <div class="container">
          <img src="/RiU/title.png" alt="Radicals in University" class="title-img mobile">
          <div class="paper">
            <div class="club-logo">
              <img src="https://picsum.photos/id/237/200/300" alt="동아리 로고"/>
            </div>
            <ClubInfo university={university} officialName={officialName} client:load />
            <HyperButton imgSrc='button_back.png' href="" cling={false} />
          </div>
          <div class="mobile">
            <RiUFooter />
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
